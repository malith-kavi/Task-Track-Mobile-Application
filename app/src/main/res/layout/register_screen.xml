<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoImageView2"
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:contentDescription="app logo"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descriptionTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/comic"
        android:paddingEnd="24dp"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.197"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImageView2" />

    <EditText
        android:id="@+id/userNameEditText"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/comic"
        android:hint="Enter Your User Name"
        android:paddingStart="25dp"
        android:textColor="@color/purple_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionTextView2" />

    <EditText
        android:id="@+id/passwordEditText2"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/comic"
        android:hint="Enter Your Password"
        android:paddingStart="25dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userNameEditText" />

    <EditText
        android:id="@+id/confirmPasswordEditText"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/comic"
        android:hint="Confirm Your Password"
        android:paddingStart="25dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText2" />

    <EditText
        android:id="@+id/emailEditText2"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/edit_text"
        android:fontFamily="@font/comic"
        android:hint="Enter Your Email"
        android:paddingStart="25dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordEditText" />

    <TextView
        android:id="@+id/signInTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/comic"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Already have an account ?"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.308"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailEditText2" />

    <TextView
        android:id="@+id/signInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/comic"
        android:gravity="center"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:text="Log In"
        android:textColor="#FF844B"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/signInTextView"
        app:layout_constraintTop_toBottomOf="@id/emailEditText2" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text"
        android:backgroundTint="#FFE0E0"
        android:fontFamily="@font/comic"
        android:padding="10dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#FF844B"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signInTextView"
        app:layout_constraintVertical_bias="0.326"
        app:layout_constraintWidth_percent="0.8" />


</androidx.constraintlayout.widget.ConstraintLayout>